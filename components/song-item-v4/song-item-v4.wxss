/* components/song-item-v4/song-item-v4.wxss */
.item{
  width: 100%;
  height: 80rpx;

  display: flex;
  flex-direction: row;

  padding: 10rpx 0;
}
.item:hover{
  background-color: rgb(255, 231, 231);
  border-radius: 20rpx;
}
.item-index{
  width: 60rpx;
  height: 100%;
  /* text-align: center; */
  line-height: 80rpx;
  font-size: 28rpx;
}
.item-info{
  flex:1;
  display: flex;
  flex-direction: column;
}

.item-info .info-name{
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item-info .info-singer .sq{
  width: 30rpx;
  /* height: 40rpx; */
}
.item-info .info-singer .singer{
  font-size: 22rpx;
  margin-left: 5rpx;
}