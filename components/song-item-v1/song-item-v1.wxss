/* components/song-item-v1/song-item-v1.wxss */
.song-item{
  height: 100rpx;
  width: 100%;

  display: flex;
  flex-direction: row;
  overflow: hidden;
  margin-bottom: 10rpx;
  justify-content: space-between;
}

.song-item .info .song-item-img{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

.song-item .info{
  font-size: 30rpx;
  padding: 10rpx 0;
  justify-content: center;
  
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
}
.info-title{
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.info-title .name{
  font-size: 26rpx;
}
.info-title .singer{
  font-size: 22rpx;
  color: rgb(160, 159, 158);
}
.song-item .arrow .arrow-icon{
  width: 100%;
  height: 100%;

}