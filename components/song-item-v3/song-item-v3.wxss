/* components/song-item-v3/song-item-v3.wxss */
.ranking-container{
  width: 100%;
  height: 300rpx;
  background-color: rgb(240, 240, 240);

  display: flex;
  flex-direction: row;
  justify-content: space-between;

  /* padding: 0 10rpx; */
  margin: 10rpx 0;
  border-radius: 12rpx;

  color: rgb(12, 12, 12);
}

.content{
  flex: 1;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 10rpx;
}
.content .content-name{
  font-size: 35rpx;
  font-weight: bolder;
}
.content .list{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  justify-content: space-around;
}
.list .item{
  height: 40rpx;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list .item:hover{
  background-color: rgb(235, 175, 175);
  border-radius: 12rpx;
}

.album{
  width: 300rpx;
  height: 100%;

  overflow: hidden;
  position: relative;
  /* padding: 20rpx; */
}
.album .album-img{
  width: 100%;
  border-radius: 12rpx;
}
.album .count{
  font-size: 20rpx;
  position: absolute;
  top: 260rpx;
  right: 15rpx;
  background-color: black;
  color: aliceblue;
  border-radius: 12rpx;
  padding: 3rpx 8rpx;
}